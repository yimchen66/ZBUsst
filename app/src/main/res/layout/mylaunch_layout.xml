<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@drawable/shape_mylaunch_whole">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mylaunch_iv_touxiang"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:id="@+id/mylaunch_tv_nickname"
                    android:text="云烟采用"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:id="@+id/mylaunch_tv_state"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="@color/personalcolor"
                android:gravity="right"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mylaunch_iv_goodimg"
                android:background="@drawable/shape_goodpic"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mylaunch_tv_goodintro"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"/>
                <TextView
                    android:id="@+id/mylaunch_tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="end"
                    android:textColor="@color/mainlist_uploadtime"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mylaunch_tv_goodprice"
                android:text="16.00"
                android:layout_width="match_parent"
                android:textSize="18dp"
                android:textColor="@color/mainlist_goodtype"
                android:gravity="end"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mylaunch_btn_delete"
                android:text="删除订单"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:focusable="false"
                android:background="@drawable/shape_mylaunch_btn_click"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/mylaunch_btn_urge"
                android:layout_width="0dp"
                android:text="催他一下"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_mylaunch_btn_click"
                android:gravity="center"
                android:focusable="false"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/mylaunch_btn_compelte"
                android:layout_width="0dp"
                android:text="确认完成"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:focusable="false"
                android:background="@drawable/shape_mylaunch_btn_click"
                android:gravity="center"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>